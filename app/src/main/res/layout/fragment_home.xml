<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="user"
            type="com.example.uts.model.User" />
        <variable
            name="fragment"
            type="com.example.uts.FragmentHome" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_person_pin_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txtWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome "
            app:layout_constraintStart_toEndOf="@id/icon"
            app:layout_constraintTop_toTopOf="@id/icon"
            app:layout_constraintBottom_toBottomOf="@id/icon"
            android:textSize="25dp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:textColor="#6437A0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.nama}"
            android:hint="Kevin"
            app:layout_constraintStart_toEndOf="@id/txtWelcome"
            app:layout_constraintTop_toTopOf="@+id/txtWelcome"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#6437A0"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/icon"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#6437A0"
            android:layout_margin="16dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/judulSaldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:text="Sisah Saldo"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/rupiah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp. "
                    android:textSize="37dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/judulSaldo"
                    app:layout_constraintStart_toStartOf="@+id/judulSaldo"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{user.uang}"
                    android:hint="12000"
                    android:textSize="37dp"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toBottomOf="@+id/judulSaldo"
                    app:layout_constraintStart_toEndOf="@id/rupiah"
                    android:textStyle="bold"/>

                <ImageView
                    android:id="@+id/btnTopup"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_add_box_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/rupiah"
                    app:layout_constraintBottom_toBottomOf="@+id/rupiah"
                    android:layout_marginEnd="28dp"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/judulTopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Top Up"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="@+id/btnTopup"
                    app:layout_constraintStart_toStartOf="@+id/btnTopup"
                    app:layout_constraintBottom_toTopOf="@+id/btnTopup"
                    android:textSize="17dp"/>


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCreate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:text="Buat Pesanan"
            app:cornerRadius="10dp"
            android:backgroundTint="@color/white"
            app:strokeColor="#6437A0"
            app:strokeWidth="3dp"
            android:textColor="#6437A0"
            android:onClick="@{fragment.btnCreate}"/>

        <TextView
            android:id="@+id/judulList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIST DELIVERY"
            app:layout_constraintTop_toBottomOf="@+id/btnCreate"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="28dp"
            android:layout_marginStart="40dp"
            android:textSize="26dp"
            android:textStyle="bold"
            android:textColor="#6437A0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="405dp"
            app:layout_constraintTop_toBottomOf="@+id/judulList">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_deliveryList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:listitem="@layout/adapter_recycler_view" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>